import std.concurrency 0.1.0 {

	namespace std {
		
		namespace concurrency {
			
			template <typename T>
			require (T : runnable and is_movable<T>)
			class fiber {
				static fiber<T> create(T runnable_object);
				
				void cancel();
				
				void join();
				
				event::source event_source() const noexcept;
			}
			
		}
	}
	
}


