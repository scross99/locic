
import std.container 0.1.0 {
	
	namespace std {
	
		template <typename T, bool IsListConst>
		class list_range {
			template <bool IsConst>
			const<IsConst or IsListConst>(T)& front() const(IsConst);
			
			void skip_front();
			
			template <bool IsConst>
			const<IsConst or IsListConst>(T)& back() const(IsConst);
			
			void skip_back();
			
			bool empty() const noexcept;
		}
		
		/**
		 * \brief Doubly-linked list.
		 */
		template <typename T>
		class list {
			static list<T> create();
			
			void __destroy() noexcept require(destructible<T>);
			
			bool empty() const noexcept;
			
			size_t size() const noexcept;
			
			void clear() noexcept require(destructible<T>);
			
			template <bool IsConst>
			const<IsConst>(T)& front() const(IsConst);
			
			template <bool IsConst>
			const<IsConst>(T)& back() const(IsConst);
			
			void push_front(T value) require(movable<T>);
			
			void pop_front() noexcept require(destructible<T>);
			
			void push_back(T value) require(movable<T>);
			
			void pop_back() noexcept require(destructible<T>);
			
			template <bool IsConst>
			list_range<T, IsConst> all() const(IsConst) noexcept;
			
		}
		
	}
	
}

